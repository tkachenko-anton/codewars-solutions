// Training JS #10: loop statement --for
// https://www.codewars.com/kata/5721a78c283129e416000999/train/javascript

function pickIt(arr) {
  var odd = [],
    even = [];
  let count = 0;
  for (let i = 0; i < arr.length; i++) {
    if (arr[i] % 2 !== 0) {
      odd.push(arr[i]);
      count = count + arr[i];
    } else if (arr[i] % 2 === 0) {
      even.push(arr[i]);
      count = count + arr[i];
    }
  }
  return [odd, even];
}
