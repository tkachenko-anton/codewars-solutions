// How old will I be in 2099?
// https://www.codewars.com/kata/5761a717780f8950ce001473/train/javascript

function  calculateAge(birth, counter) {
  let currentAge = counter - birth;

  if (currentAge === 1) {
    return `You are ${currentAge} year old.`;
  } else if (currentAge > 1) {
    return `You are ${currentAge} years old.`;
  } else if (currentAge === -1) {
    return `You will be born in ${Math.abs(currentAge)} year.`;
  } else if (currentAge < -1) {
    return `You will be born in ${Math.abs(currentAge)} years.`;
  } else {
    return "You were born this very year!";
  }
}
